// room script file


function room_AfterFadeIn()
{
  StartCutscene(eSkipAnyKeyOrMouseClick);
  Wait(150);
  String s = "Martin Èermák";
  Overlay* myOverlay = Overlay.CreateTextual(160-FloatToInt(IntToFloat(s.Length*6)/2.0), 80,120,Game.NormalFont,15,tr(s));
  FadeIn(50);
  Wait(150);
  FadeOut(50);
  myOverlay.Remove();
  Wait(50);
  s = "uvádí";
  myOverlay = Overlay.CreateTextual(160-FloatToInt(IntToFloat(s.Length*6)/2.0), 80,120,Game.NormalFont,15,tr(s));

  FadeIn(50);
  Wait(150);
  FadeOut(50);
  myOverlay.Remove();
  Wait(50);
  s = GetTranslation("èeskou adventuru");
  myOverlay = Overlay.CreateTextual(160-FloatToInt(IntToFloat(s.Length*6)/2.0), 80,160,Game.NormalFont,15,tr(s));

  FadeIn(50);
  Wait(150);
  FadeOut(50);
  myOverlay.Remove();
  Wait(50);

  EndCutscene();
  mouse.Visible = true;
  GoToMenu();
}

function room_Load()
{
  ShowIconBar(false);
  mouse.UseModeGraphic(eModePointer);

  mouse.Visible = false;
  gMainMenu.Visible = false;
  gStatusline.Visible = false;
  player.x = -100;
}
