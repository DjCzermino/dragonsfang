function room_LeaveBottom()
{
  if (udedy_skrinka_faze == 100) return;
    
  if (DEMO) {
    if (game.score<20) {
      if (JeNoc()) {
        Displayc("Teï v noci chodit do temného lesa? No to snad nemyslíš ani vážnì!");
      } else {
        Displayc("Máš takový pocit, že tu ještì musíš nìco udìlat...");
        player.Walk(120, 200, eBlock, eWalkableAreas);
      }
    } else {
      if (Game.DoOnceOnly("konec hry")) {
        Displayc("Dobrá, vše máš již hotovo. Jdeme tedy...");
        if (JeNoc()) {
          EndGame(0, "Nedbaje rad moudrého starce, vydal jsi se ven, do temnoty... Netrvalo dlouho a temné síly, na které tì upozoròoval, tì zcela pohltily. Marnì tì již ráno omýval studenou vodou. KONEC");
        } else {
          EndGame(1, "");
        }
      }
    }
  } else {
    player.ChangeRoom(26,160, 120);
  }
}

